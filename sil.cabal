name:                sil
version:             0.1.0.0
synopsis:            A simple but robust virtual machine
description:         Please see README.md
homepage:            https://github.com/sfultong/sil#readme
license:             Apache-2.0
license-file:        LICENSE
author:              Sam Griffin
maintainer:          sam.griffin@gmail.com
copyright:           2017 Sam Griffin
category:            Web
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     SIL
                     , SIL.Eval
                     , SIL.Llvm
                     , SIL.Optimizer
                     , SIL.Parser
                     , SIL.RunTime
                     , SIL.TypeChecker
  build-depends:       base >= 4.7 && < 5
                     , recursion-schemes
                     , parsec
                     , indents
                     , containers
                     , mtl
                     , bytestring
                     , llvm-hs         >= 5.0
                     , llvm-hs-pure    >= 5.0

  default-language:    Haskell2010

executable sil-exe
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , containers
                     , sil
                     , strict
  default-language:    Haskell2010

test-suite sil-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , sil
                     , strict
                     , QuickCheck
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/sfultong/sil
